.hourly .hourlys {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    font-size: 24rpx;
    padding-top: 20rpx;
    background: #F7F8F9;
    margin-bottom: 20rpx;
    overflow-x: scroll;
}

.hourly .title {
    margin-left: 40rpx;
    margin-top: 20rpx;
}

.hourly .hourlys .item {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    width: 140rpx;
    flex-shrink: 0;
}

.hourly .hourlys .temperature,
.hourly .hourlys .weather {
    font-size: 28rpx;
}

.hourly .hourlys .date {
    color: rgba(0, 0, 0, 0.5);
}

.hourly .hourlys .wind {
    color: rgba(0, 0, 0, 0.5);
    font-size: 24rpx;
}

.hourly-24-item-icon {
    width: 48rpx;
    height: 48rpx;
}

.hourly-line-chart {
 
    height: 200rpx;
    display: block;
}

ec-canvas {
    width: 100%;
    height: 100%;
    background-color: #fff;
}